generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

/// 用户表
model User {
  id            String      @id @default(uuid())
  username      String      @unique @db.VarChar(50)
  email         String?     @unique @db.VarChar(255)
  passwordHash  String      @map("password_hash") @db.VarChar(255)
  firstName     String?     @map("first_name") @db.VarChar(50)
  lastName      String?     @map("last_name") @db.VarChar(50)
  phoneNumber   String?     @map("phone_number") @db.VarChar(20)
  status        UserStatus  @default(ACTIVE)
  lastLogin     DateTime?   @map("last_login") @db.Timestamptz(6)
  loginCount    Int         @default(0) @map("login_count")
  createdAt     DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime    @updatedAt @map("updated_at") @db.Timestamptz(6)

  // 关联
  userRoles     UserRole[]

  @@map("users")
  @@index([username])
  @@index([email])
  @@index([status])
}

/// 用户状态枚举
enum UserStatus {
  ACTIVE      // 活跃
  INACTIVE    // 未激活
  INVITED     // 已邀请
  SUSPENDED   // 已暂停
}

/// 角色表
model Role {
  id              String            @id @default(uuid())
  name            String            @unique @db.VarChar(50)
  displayName     String            @map("display_name") @db.VarChar(100)
  description     String?           @db.Text
  isSystem        Boolean           @default(false) @map("is_system") // 系统角色不可删除
  createdAt       DateTime          @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime          @updatedAt @map("updated_at") @db.Timestamptz(6)

  // 关联
  userRoles       UserRole[]
  rolePermissions RolePermission[]

  @@map("roles")
  @@index([name])
}

/// 权限表
model Permission {
  id              String            @id @default(uuid())
  resource        String            @db.VarChar(50)   // 资源名称，如 'user', 'role', 'dashboard'
  action          PermissionAction                     // 动作：create, read, update, delete, manage
  conditions      Json?                                 // 条件，如 {"status": "active"}
  description     String?           @db.Text
  createdAt       DateTime          @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime          @updatedAt @map("updated_at") @db.Timestamptz(6)

  // 关联
  rolePermissions RolePermission[]

  @@unique([resource, action])
  @@map("permissions")
  @@index([resource])
  @@index([action])
}

/// 权限动作枚举
enum PermissionAction {
  CREATE   // 创建
  READ     // 读取
  UPDATE   // 更新
  DELETE   // 删除
  MANAGE   // 管理（所有权限）
  IMPORT   // 导入
  EXPORT   // 导出
}

/// 用户角色关联表（多对多）
model UserRole {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  roleId    String    @map("role_id")
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)

  // 关联
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      Role      @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@map("user_roles")
  @@index([userId])
  @@index([roleId])
}

/// 角色权限关联表（多对多）
model RolePermission {
  id           String     @id @default(uuid())
  roleId       String     @map("role_id")
  permissionId String     @map("permission_id")
  createdAt    DateTime   @default(now()) @map("created_at") @db.Timestamptz(6)

  // 关联
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@map("role_permissions")
  @@index([roleId])
  @@index([permissionId])
}
