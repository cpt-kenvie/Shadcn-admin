generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// 用户表
model User {
  id            String      @id @default(uuid())
  username      String      @unique @db.VarChar(50)
  email         String?     @unique @db.VarChar(255)
  passwordHash  String      @map("password_hash") @db.VarChar(255)
  nickname      String?     @db.VarChar(100)
  avatar        String?     @db.VarChar(500)
  bio           String?     @db.Text
  urls          Json?       @db.JsonB
  birthDate     DateTime?   @map("birth_date") @db.Date
  phoneNumber   String?     @map("phone_number") @db.VarChar(20)
  status        UserStatus  @default(ACTIVE)
  lastLogin     DateTime?   @map("last_login") @db.Timestamptz(6)
  loginCount    Int         @default(0) @map("login_count")
  createdAt     DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime    @updatedAt @map("updated_at") @db.Timestamptz(6)

  // 关联
  userRoles     UserRole[]
  preferences   UserPreference?
  news          News[]      @relation("NewsAuthor")
  newsUpdates   News[]      @relation("NewsUpdatedBy")

  @@map("users")
  @@index([username])
  @@index([email])
  @@index([status])
}

/// 用户状态枚举
enum UserStatus {
  ACTIVE      // 活跃
  INACTIVE    // 未激活
  INVITED     // 已邀请
  SUSPENDED   // 已暂停
}

/// 角色表
model Role {
  id              String            @id @default(uuid())
  name            String            @unique @db.VarChar(50)
  displayName     String            @map("display_name") @db.VarChar(100)
  description     String?           @db.Text
  isSystem        Boolean           @default(false) @map("is_system") // 系统角色不可删除
  createdAt       DateTime          @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime          @updatedAt @map("updated_at") @db.Timestamptz(6)

  // 关联
  userRoles       UserRole[]
  rolePermissions RolePermission[]

  @@map("roles")
  @@index([name])
}

/// 权限表
model Permission {
  id               String            @id @default(uuid())
  resource         String            @db.VarChar(50)   // 资源名称，如 'user', 'role', 'dashboard'
  action           PermissionAction                     // 动作：create, read, update, delete, manage
  conditions       Json?                                 // 条件，如 {"status": "active"}
  description      String?           @db.Text
  createdAt        DateTime          @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt        DateTime          @updatedAt @map("updated_at") @db.Timestamptz(6)

  // 关联
  rolePermissions  RolePermission[]
  routePermissions RoutePermission[]

  @@unique([resource, action])
  @@map("permissions")
  @@index([resource])
  @@index([action])
}

/// 权限动作枚举
enum PermissionAction {
  CREATE   // 创建
  READ     // 读取
  UPDATE   // 更新
  DELETE   // 删除
  MANAGE   // 管理（所有权限）
  IMPORT   // 导入
  EXPORT   // 导出
}

/// 用户角色关联表（多对多）
model UserRole {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  roleId    String    @map("role_id")
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)

  // 关联
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      Role      @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@map("user_roles")
  @@index([userId])
  @@index([roleId])
}

/// 角色权限关联表（多对多）
model RolePermission {
  id           String     @id @default(uuid())
  roleId       String     @map("role_id")
  permissionId String     @map("permission_id")
  createdAt    DateTime   @default(now()) @map("created_at") @db.Timestamptz(6)

  // 关联
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@map("role_permissions")
  @@index([roleId])
  @@index([permissionId])
}

/// 路由表
model Route {
  id              String            @id @default(uuid())
  path            String            @unique @db.VarChar(255)   // 路由路径
  name            String            @unique @db.VarChar(100)   // 路由名称
  component       String?           @db.VarChar(255)           // 组件路径
  title           String            @db.VarChar(100)           // 显示标题
  icon            String?           @db.VarChar(50)            // 图标
  parentId        String?           @map("parent_id")          // 父路由ID
  order           Int               @default(0)                // 排序
  hidden          Boolean           @default(false)            // 是否隐藏
  createdAt       DateTime          @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime          @updatedAt @map("updated_at") @db.Timestamptz(6)

  // 关联
  parent          Route?            @relation("RouteToRoute", fields: [parentId], references: [id], onDelete: Restrict)
  children        Route[]           @relation("RouteToRoute")
  routePermissions RoutePermission[]

  @@map("routes")
  @@index([path])
  @@index([name])
  @@index([parentId])
  @@index([order])
}

/// 路由权限关联表（多对多）
model RoutePermission {
  id           String     @id @default(uuid())
  routeId      String     @map("route_id")
  permissionId String     @map("permission_id")
  createdAt    DateTime   @default(now()) @map("created_at") @db.Timestamptz(6)

  // 关联
  route        Route      @relation(fields: [routeId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([routeId, permissionId])
  @@map("route_permissions")
  @@index([routeId])
  @@index([permissionId])
}

/// 系统配置表
model SystemConfig {
  id        String   @id @default(uuid())
  key       String   @unique @db.VarChar(100)  // 配置键名
  value     String   @db.Text                   // 配置值
  category  String   @default("general") @db.VarChar(50) // 配置分类
  description String? @db.Text                  // 配置描述
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@map("system_configs")
  @@index([key])
  @@index([category])
}

/// 用户偏好设置表
model UserPreference {
  id        String   @id @default(uuid())
  userId    String   @unique @map("user_id")
  theme     String   @default("light") @db.VarChar(20)  // 主题：light, dark
  font      String   @default("manrope") @db.VarChar(50) // 字体
  language  String   @default("zh-CN") @db.VarChar(10)   // 语言
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  // 关联
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
  @@index([userId])
}

enum NewsStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model News {
  id            String      @id @default(uuid())
  title         String      @db.VarChar(200)
  summary       String      @db.VarChar(500)
  content       String      @db.Text
  coverImageUrl String?     @map("cover_image_url") @db.VarChar(500)
  status        NewsStatus  @default(DRAFT)
  publishedAt   DateTime?   @map("published_at") @db.Timestamptz(6)
  views         Int         @default(0)
  authorId      String      @map("author_id")
  updatedById   String?     @map("updated_by_id")
  createdAt     DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime    @updatedAt @map("updated_at") @db.Timestamptz(6)

  author        User        @relation("NewsAuthor", fields: [authorId], references: [id], onDelete: Restrict)
  updatedBy     User?       @relation("NewsUpdatedBy", fields: [updatedById], references: [id], onDelete: SetNull)

  @@map("news")
  @@index([status])
  @@index([publishedAt])
  @@index([createdAt])
  @@index([authorId])
}
